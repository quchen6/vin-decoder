    <h2>VIN Search</h2>


    <p>
      <div ng-controller="RaffleCtrl">
        <form ng-submit="addEntry()">

          <div class="form-group">
            <input type="text" class="form-control" id="vehicle_search" placeholder="Enter VIN" ng-model="newVehicle.name">
          </div>

          <input type="submit" class="btn btn-primary" values="Search"/>
        </form>

        <ul>
          <li ng-repeat="vehicle in vehicles">
            {{vehicle.year}} {{vehicle.make}} {{vehicle.model}}
          </li>
        </ul>
        
      </div>
    </p>

